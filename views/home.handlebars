<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tech Blog</title>
</head>

<body>
    {{#if loggedIn}}
    <div class="cards">
        {{#each postList}}
        <a href="/post/{{this.postId}}">
            <div class="blog_card">
                <h2>{{this.title}}</h2>
                <p><strong>{{this.user}}</strong> <span class="created">{{this.time}}</span></p>
                <p>{{this.body}}</p>
            </div>
        </a>
        {{/each}}
    </div>

    <form method="get" action="/newPost" id="newPost">
        <button id="newPostBtn">+</button>
    </form>

    {{else}}
    <h1>Please Log in</h1>
    {{/if}}
</body>
